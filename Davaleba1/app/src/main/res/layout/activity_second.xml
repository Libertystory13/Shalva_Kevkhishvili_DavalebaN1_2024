<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EE"
        android:orientation="vertical"
        />

    <TextView
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EE"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:text="MidtermBtuEasy"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/emailSentIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/topAppBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_email" />

    <TextView
        android:id="@+id/recipientEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailSentIcon"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:background="@drawable/gradient_background"
        android:text="user93846@gmail.com"
        android:textColor="#000000"
        android:textSize="16sp"
         />

    <RelativeLayout
        android:id="@+id/messageDisplayContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/recipientEmailTextView"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_border"
        android:padding="8dp">

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:text="message"
            android:textColor="#757575"
            android:textSize="16sp"
            android:padding="8dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageDisplayContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Clear"
        android:background="@drawable/rounded_button_border"
        android:textColor="#000000"
        android:padding="10dp" />

</RelativeLayout>
